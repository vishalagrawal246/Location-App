<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="-: Target Mobile Number :-"
            />
        <EditText
            android:id="@+id/getNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            >
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="left">

            <Button
                android:id="@+id/btnLocation"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Get Current Loc."
                android:backgroundTint="#89ABE3"
                android:textColor="#000000"
                android:padding="5dp"
                android:drawableRight="@drawable/loc_iconn"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:text="Lattitude,Longitude"
                />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="left"
            >

            <Button
                android:id="@+id/btn"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="SEND VIA SMS"
                android:backgroundTint="#FFD662"
                android:textColor="#000000"
                android:drawableRight="@drawable/sms_iconn"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/net_iconn"
                android:backgroundTint="#FFD662"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:text="SEND VIA INTERNET "
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn3"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="FETCH LOC."
                android:backgroundTint="#89ABE3"
                android:padding="5dp"
                android:textColor="#000000"
                android:drawableRight="@drawable/fetch_iconn"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/getData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:clickable="true"
                android:textColor="#000000"
                android:hint="Fetched Data"
                android:layout_margin="10dp"
                android:textIsSelectable="true"

                >
            </TextView>


        </LinearLayout>



        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy to clipboard"
            android:padding="10dp"
            android:visibility="gone"
            android:backgroundTint="#00C1E7"
            android:drawableRight="@drawable/clipboard_iconn"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/receiveMsg"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn6"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="FETCH MSG."
                android:padding="5dp"
                android:textColor="#000000"
                android:backgroundTint="#89ABE3"
                android:drawableRight="@drawable/recievee"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/sendMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Fetched Message"
                android:clickable="true"
                android:layout_margin="10dp"
                android:textIsSelectable="true"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            >

            <EditText
                android:id="@+id/getMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:hint="Type Your Message"
                android:layout_marginTop="15dp"
                />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:text="SEND"
                android:textColor="@android:color/black"
                android:drawableRight="@drawable/sendd"
                android:backgroundTint="#FFD662"
                android:layout_gravity="center"/>


        </LinearLayout>


        <Button
            android:textColor="@android:color/white"
            android:backgroundTint="#00C1E7"
            android:id="@+id/createBtn"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:text="Setup Floating Widget" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:text="Long Press the Text to copy to clipboard"
            />


    </LinearLayout>

</ScrollView>
